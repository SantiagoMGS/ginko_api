generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ValidRoles {
  ADMIN
  USER
}

model User {
  id    String  @id @default(uuid())
  firstName String
  lastName  String
  email  String @unique
  password String
  roles  ValidRoles[]
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}